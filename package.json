{
  "name": "a-tool-of-memorize",
  "version": "2.0.0",
  "description": "A-T-O-M 在线练习和记忆训练工具 - Vue 3 + TypeScript 版本",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@vueuse/core": "^13.9.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "sass": "^1.93.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vue-tsc": "^3.1.1"
  },
  "keywords": [
    "vue",
    "typescript",
    "mobile",
    "responsive",
    "education",
    "practice",
    "memory"
  ],
  "author": "A-T-O-M Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/a-tool-of-memorize.git"
  },
  "homepage": "https://your-username.github.io/a-tool-of-memorize/",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}